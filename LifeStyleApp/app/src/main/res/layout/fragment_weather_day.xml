<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dayWeather_low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="20dp"
        android:text="55&#xb0;"
        android:textColor="@color/cream"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/dayWeather_icon" />

    <ImageView
        android:id="@+id/dayWeather_icon"
        android:layout_width="84dp"
        android:layout_height="82dp"
        android:layout_marginTop="12dp"
        android:tint="@color/cream"
        app:layout_constraintEnd_toEndOf="@+id/dayWeather_day"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/dayWeather_day"
        app:layout_constraintTop_toBottomOf="@+id/dayWeather_day"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/dayWeather_high"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="75&#xb0;"
        android:textColor="@color/cream"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/dayWeather_icon"
        app:layout_constraintTop_toBottomOf="@+id/dayWeather_icon" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="20dp"
        android:text="/"
        android:textColor="@color/cream"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/dayWeather_high"
        app:layout_constraintTop_toBottomOf="@+id/dayWeather_icon" />

    <TextView
        android:id="@+id/dayWeather_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Monday"
        android:textColor="@color/cream"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>